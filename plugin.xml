<?xml version='1.0' encoding='utf-8'?>
<plugin id="com.jiangshiquan.ImageEditorPlugin" version="1.3.1"
 xmlns="http://apache.org/cordova/ns/plugins/1.0" 
 xmlns:android="http://schemas.android.com/apk/res/android">
	<name>ImageEditorPlugin</name>
	<js-module name="ImageEditorPlugin" src="www/ImageEditorPlugin.js">
		<clobbers target="imageeditorplugin" />
	</js-module>
	<platform name="ios">
		<config-file parent="/*" target="config.xml">
			<feature name="ImageEditorPlugin">
				<param name="ios-package" value="ImageEditorPlugin" />
			</feature>
		</config-file>
		
		<dependency url="https://github.com/jianghat/jianghat-add-swift-support.git" id="jianghat-add-swift-support"/>
		
		<podspec>
		    <config>
		        <source url="https://github.com/brightcove/BrightcoveSpecs.git" />
		        <source url="https://cdn.cocoapods.org/" />
		        <!-- <source url="https://github.com/eventtus/photo-editor.git" /> -->
		    </config>
		    <pods use-frameworks="true">
		        <pod name="iOSPhotoEditor" />
		    </pods>
		</podspec>
		
		<source-file src="src/ios/ImageEditorPlugin.swift" />
	</platform>
		
	<platform name="android">
		<config-file parent="/*" target="res/xml/config.xml">
			<feature name="ImageEditorPlugin">
				<param name="android-package" value="com.jiangshiquan.ImageEditorPlugin.ImageEditorPlugin" />
				</feature>
		</config-file>
		
		<config-file parent="/*" target="AndroidManifest.xml"></config-file>
		<source-file src="src/android/ImageEditorPlugin.java" target-dir="src/ImageEditorPlugin" />
	</platform>
</plugin>